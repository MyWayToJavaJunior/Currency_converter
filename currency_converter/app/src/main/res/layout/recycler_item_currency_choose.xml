<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

        <ImageView
            android:id="@+id/currency_flag"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/char_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/full_name_txt"
            android:layout_alignLeft="@+id/full_name_txt"
            android:layout_alignStart="@+id/full_name_txt"
            android:textColor="@color/colorButtonsText"
            android:textSize="24sp"
            tools:text="RUB" />

        <TextView
            android:id="@+id/full_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/currency_flag"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_toEndOf="@+id/currency_flag"
            android:layout_toRightOf="@+id/currency_flag"
            android:textColor="@color/colorButtonsText"
            android:textSize="14sp"
            tools:text="Российский рубль" />
</RelativeLayout>